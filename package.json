  "license": "Apache License 2.0",
  "devDependencies": {
    "@types/jest": "^27.5.1",
    "@types/node": "^17.0.33",
    "ts-jest": "^28.0.2",
    "ts-lint": "^4.5.1",
    "typescript": "^4.6.4"
  },
  "exports": {
    ".": {
      "import": "./es6/index.js",
      "require": "./commonjs/index.js",
      "types": "./es6/index.d.ts"
    }
